<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommunicationFormatActivity">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        android:background="#0080FF"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="11dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">


        <androidx.cardview.widget.CardView
            android:id="@+id/chat_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#0080FF"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:contentPadding="4dp"

            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"

                >

                <ImageView
                    android:id="@+id/Chat_Icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/chat_icon"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"


                    />

                <TextView
                    android:id="@+id/Chat_Name"
                    android:layout_width="236dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="30dp"
                    android:text="Chat"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    app:layout_constraintLeft_toRightOf="@id/Chat_Icon"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/Chat_Details"
                    android:layout_width="241dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="30dp"
                    android:text="When you are busy to talk you should pic this option"
                    android:textColor="@color/white"
                    app:layout_constraintLeft_toRightOf="@+id/Chat_Icon"
                    app:layout_constraintTop_toBottomOf="@+id/Chat_Name" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Call_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#0080FF"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:contentPadding="4dp"


            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"

                >

                <ImageView
                    android:id="@+id/Call_Icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/call_icon"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"


                    />

                <TextView
                    android:id="@+id/Call_Name"
                    android:layout_width="236dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="30dp"
                    android:text="Call"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    app:layout_constraintLeft_toRightOf="@id/Call_Icon"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/Call_Details"
                    android:layout_width="246dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="8dp"
                    android:text="Talk to the doctor on the voice call"
                    android:textColor="@color/white"
                    app:layout_constraintLeft_toRightOf="@+id/Call_Icon"
                    app:layout_constraintTop_toBottomOf="@+id/Call_Name" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Video_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#0080FF"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:contentPadding="4dp"


            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"

                >

                <ImageView
                    android:id="@+id/Video_Icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/video_call_image"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"


                    />

                <TextView
                    android:id="@+id/Video_Name"
                    android:layout_width="236dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="30dp"
                    android:text="Video Call"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    app:layout_constraintLeft_toRightOf="@id/Video_Icon"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/Video_Details"
                    android:layout_width="236dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="8dp"
                    android:text="Talk to a doctor on a video call"
                    android:textColor="@color/white"
                    app:layout_constraintLeft_toRightOf="@+id/Video_Icon"
                    app:layout_constraintTop_toBottomOf="@+id/Video_Name" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Select your preffered mode of communication"
        android:textColor="@color/white"
        android:textSize="19dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Buttonnext"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_background_primary"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.929" />




</androidx.constraintlayout.widget.ConstraintLayout>